<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Theaters List</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles/fe_style.css">
  <link rel="stylesheet" href="/styles/style.css">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@400;700&display=swap" rel="stylesheet">
  <style>
    .popup {
      display: none;
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      padding: 2rem;
      background-color: white;
      border-radius: 0.5rem;
      z-index: 9999;
    }
  </style>
  <script>
    function showPopup() {
      var popup = document.getElementById("popup");
      popup.style.display = "block";
    }
  </script>
</head>

<body class="bg-black">
  <!-- Navbar -->
  <nav class="p-10 bg-black text-cfab7a">
    <div class="container flex items-center justify-between mx-auto">
      <a href="/" class="text-3xl font-semibold">TixOnline</a>
      <div class="text-[#cfab7a]">
        <a href="/" class="px-4 hover:text-white">Home</a>
        <a href="/#nowplaying" class="px-4 hover:text-white">Now Playing</a>
        <a href="/#comingsoon" class="px-4 hover:text-white">Coming Soon</a>
        <a href="/theaters" class="px-4 hover:text-white">Theaters</a>
        <a href="/#about" class="px-4 hover:text-white">About</a>
      </div>
    </div>
  </nav>
       <!--Filter-->
       <section id="filter" class="bg-black py-16 text-[#cfab7a] ">
        <form id="filterForm" action="/schedules-theater/<%= theater.theater_id %>" method="GET">
          <select id="selectedCity" name="selectedCity" onchange="this.form.submit();">
            <% cities.forEach((city)=> { %>
              <option value="<%= city.city %>" <% if(city.city==cityFilter){ %> selected <%}%>><%= city.city %>
              </option>
              <% }) %>
          </select>
          <select id="selectedDate" name="selectedDate" onchange="this.form.submit();">
            <% dateSelector.forEach((date)=> { %>
              <option value="<%= date.date %>" <% if(date.date==dateFilter){ %> selected <%}%>><%= date.date %>
              </option>
              <% }) %>
          </select>
        </form>
      </section>
  <div class="flex items-center justify-center">
    <h1 class="mb-6 text-4xl font-semibold text-cfab7a">Theaters List</h1>
  </div>
  <div class="grid grid-cols-1 gap-4 p-4 text-cfab7a sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
    
    <% theaters.forEach(function(theater) { %>
      <a href="/schedules-theater/<%= theater.theater_id %>?selectedCity=<%=cityFilter%>&selectedDate=<%=dateFilter%>"
        class="max-w-sm overflow-hidden transition-all duration-200 transform bg-gray-800 rounded shadow-lg hover:scale-105">
        <img class="object-cover w-full h-64" src='/images/<%= theater.theater_images %> '
          alt="<%= theater.city %>">
        <div class="px-6 py-4">
          <div class="mb-2 text-xl font-bold">
            <%= theater.name %>
          </div>
          <p class="text-base">
            <!-- Replace the text below with the description of the theater -->
            This is a world class theater located at <%= theater.address %>.
          </p>
        </div>
        <!-- Theater City -->
        <div class="px-6 py-4">
          <span class="inline-block px-3 py-1 mr-2 text-sm font-semibold bg-gray-200 rounded-full">
            #<%= theater.city %>
          </span>
        </div>
      </a>
      <% }) %>
  </div>

  <section id="movieDetail" class="bg-black py-16 text-[#cfab7a] ">
    <h1 class="flex justify-center mb-16 text-4xl font-semibold">
      <%= theater.name %>
    </h1>
    <!--Movie Selected Info-->
 
  </section>
  
  <%  const today = new Date(); today.setHours(today.getHours() + 0); today.setDate(today.getDate()+0);%>
  <section id="schedule" class="bg-black py-16 text-[#cfab7a] ">
    <% if (schedules !=null ) { %>
      <% if (schedules.length> 0) { %>
        <h3>Schedules:</h3>
        <% let scheduleByLocation={}; %>
          <% schedules.forEach(schedule=> {
            if (!scheduleByLocation[schedule.title]) {
            scheduleByLocation[schedule.title] = [];
            }
            scheduleByLocation[schedule.title].push(schedule);
            }); %>
            <% Object.keys(scheduleByLocation).forEach(title=> { %>
              <h2>
                <%= title %>
              </h2>
              <ul>
            
                <% scheduleByLocation[title].forEach(schedule=> { %>
                  <div   class="inline-block <%if(((new Date().getUTCHours() + 7) + ":" + new Date().getUTCMinutes()>schedule.hours) && (today.toLocaleDateString('en-GB') === schedule.date.toLocaleDateString('en-GB'))){%>
                    pointer-events-none
                    <% }%>
                    ">
                  <% if(session !=null) {%>
                    <a href="/seat/<%= schedule.schedule_id %>"
                      class="inline-block px-4 py-2 font-semibold text-white bg-blue-500 rounded hover:bg-blue-600">
                      <%= schedule.hours %>
                        <%= schedule.type %>
                    </a>
                    <% }else{ %>
                      <a onclick="showPopup()"
                        class="inline-block px-4 py-2 font-semibold text-white bg-blue-500 rounded hover:bg-blue-600">
                        <%= schedule.hours %>
                          <%= schedule.type %>
                      </a>
                      <% }%>
                        <% }); %>
                      </div>

              </ul>
              <% }); %>
                <% } else { %>
                  <p>No schedules available for this movie.</p>
                  <% } %>
                    <% } %>
  </section>

  <div id="popup" class="popup">
    <h2>This is a pop-up!</h2>
    <p>Please login first to buy ticket</p>
    <button onclick="hidePopup()"
      class="px-4 py-2 mt-4 font-semibold text-white bg-red-500 rounded hover:bg-red-600">Close</button>
  </div>

  <script>
    function hidePopup() {
      var popup = document.getElementById("popup");
      popup.style.display = "none";
    }
  </script>
</body>

</html>