<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin | Dashboard</title>
    <link rel="stylesheet" href="/styles/fe_style.css">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
</head>

<body class="bg-black font-raleway text-cfab7a">
    <div class="flex">
        <div id="navbar"
            class="fixed inset-y-0 w-64 text-white transition-transform duration-300 ease-in-out transform -translate-x-full gold-btn">
            <!-- Navigation Bar -->
            <header class="flex items-center justify-between px-6 py-4 text-xl font-semibold text-black">
                <a href="/admin/dashboard">
                    <div class="flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                            stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                d="M17.982 18.725A7.488 7.488 0 0012 15.75a7.488 7.488 0 00-5.982 2.975m11.963 0a9 9 0 10-11.963 0m11.963 0A8.966 8.966 0 0112 21a8.966 8.966 0 01-5.982-2.275M15 9.75a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                        <span class="ml-2">
                            <%= username %>
                        </span>
                    </div>
                </a>
                <svg id="close" class="hidden w-6 h-6 cursor-pointer" xmlns="http://www.w3.org/2000/svg" fill="none"
                    viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
                </svg>
            </header>
            <hr class="border-t border-gray-600">
            <ul class="space-y-2">
                <li><a href="/admin/movies" class="block px-6 py-2 font-semibold custom-btn">Movies</a></li>
                <li><a href="/admin/theaters" class="block px-6 py-2 font-semibold custom-btn">Theaters</a></li>
                <li><a href="/admin/studios" class="block px-6 py-2 font-semibold custom-btn">Studios</a></li>
                <li><a href="/admin/seats" class="block px-6 py-2 font-semibold custom-btn">Seats</a></li>
                <li><a href="/admin/schedules" class="block px-6 py-2 font-semibold custom-btn">Schedules</a></li>
            </ul>
        </div>
        <div id="hamburger-container"
            class="fixed inset-y-0 left-0 flex items-center pl-4 pr-8 cursor-pointer custom-btn">
            <svg id="hamburger" class="w-6 h-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none"
                viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
        </div>
        <div class="flex-1 max-w-screen-xl mx-auto overflow-x-auto overflow-y-auto rounded-lg shadow-md">
            <header class="py-6">
                <a href="/" class="text-4xl font-semibold hover:text-white">TixOnline</a>
            </header>
            <div class="py-8">
                <h1 class="mb-4 text-3xl font-semibold">Admin Dashboard</h1>
                <div class="mt-8">
                    <h2 class="text-2xl font-semibold">Movie Purchases</h2>
                    <% movies.forEach((movie, index)=> { %>
                        <div class="flex items-center justify-between px-6 py-4 mt-4 rounded-lg gold-btn">
                            <div>
                                <h3>Movie Title: <%= movie.title %>
                                </h3>
                                <p>Earning: <%= movie.earning %>
                                </p>
                                <p>Quantity: <%= movie.quantity %>
                                </p>
                            </div>
                        </div>
                        <% }); %>
                </div>
            </div>
            <button class="px-4 py-2 mt-8 text-sm font-semibold text-white bg-red-600 rounded-lg hover:bg-red-800">Logout</button>
        </div>
    </div>
    </div>
    <script>
        const navbar = document.getElementById('navbar');
        const hamburger = document.getElementById('hamburger');
        const close = document.getElementById('close');
        const hamburgerContainer = document.getElementById('hamburger-container');

        hamburgerContainer.addEventListener('click', () => {
            navbar.classList.add('-translate-x-0');
            navbar.classList.remove('-translate-x-full');
            hamburgerContainer.classList.add('hidden');
            close.classList.remove('hidden');
        });

        close.addEventListener('click', () => {
            navbar.classList.remove('-translate-x-0');
            navbar.classList.add('-translate-x-full');
            hamburgerContainer.classList.remove('hidden');
            close.classList.add('hidden');
        });
    </script>
</body>

</html>